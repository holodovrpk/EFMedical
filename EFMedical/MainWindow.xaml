<Window x:Class="EFMedical.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clinic Management System"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Width="950"
        Height="400"
        Background="#f3f6fa">

    <Grid>
        <!-- Верхняя синяя панель с заголовком -->
        <Border Background="#2d89ef" Height="60" VerticalAlignment="Top">
            <TextBlock Text="Управление клиникой"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0" />
        </Border>

        <!-- Основная область под верхней панелью -->
        <Grid Margin="0,60,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <!-- Левая колонка — меню -->
                <ColumnDefinition Width="*"/>
                <!-- Правая колонка — содержимое (страницы) -->
            </Grid.ColumnDefinitions>

            <!-- Левая панель с кнопками меню -->
            <Border Background="#eef2f8"
                    Grid.Column="0"
                    BorderBrush="#d0d4dc"
                    BorderThickness="0,0,1,0">
                <StackPanel VerticalAlignment="Stretch" Margin="10">

                    <!-- Кнопка перехода на главную страницу -->
                    <Button Content="Главная"
                            Click="BtnHome_Click"
                            Height="40" Margin="0,10,0,0" FontSize="16"/>

                    <!-- Кнопка перехода к списку врачей -->
                    <Button Content="Врачи"
                            x:Name="ButtonDoctor"
                            Click="BtnDoctors_Click"
                            Height="40" Margin="0,10,0,0" FontSize="16"/>

                    <!-- Кнопка перехода к списку пациентов -->
                    <Button Content="Пациенты"
                            Click="BtnPatients_Click"
                            Height="40" Margin="0,10,0,0" FontSize="16"/>

                    <!-- Кнопка перехода к списку приёмов -->
                    <Button Content="Приёмы"
                            Click="BtnAppointments_Click"
                            Height="40" Margin="0,10,0,0" FontSize="16"/>

                    <!-- Кнопка выхода из программы -->
                    <Button Content="Выход"
                            Click="BtnExit_Click"
                            Height="40" Margin="0,40,0,0" FontSize="16"
                            Background="#e81123"
                            Foreground="White"/>
                </StackPanel>
            </Border>

            <!-- Правая часть — фрейм для отображения страниц -->
            <!-- Здесь будут загружаться страницы (HomePage, DoctorsPage, PatientsPage, AppointmentsPage) -->
            <Frame x:Name="MainFrame"
                   Grid.Column="1"
                   NavigationUIVisibility="Hidden"
                   Margin="10"/>
        </Grid>
    </Grid>
</Window>
